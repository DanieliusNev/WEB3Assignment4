{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./",
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true
    },
    "include": ["src/**/*", "__test__/**/*"],
    "exclude": ["node_modules"]
  }
  